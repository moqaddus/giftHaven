       /* CSS for the slide-out window */
   .cart-container {
    position: fixed;
    top: 0;
    right: -300px;
    width: 300px;
    height: 100vh;
    background-color: #f2f2f2;
    transition: right 0.3s ease-in-out;
    z-index: 9999; /* Adjust the z-index value to ensure the container is on top */
  }

    .cart-open {
      right: 0; /* Slide-out to the visible position */
    }

    .cart-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px;
    }

      .cart-content {
    padding: 10px;
  }

  .cart-item {
    display: flex;
    align-items: center;
    padding: 2px;
  }

  .cart-item img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    margin-right: 10px;
  }

  .item-details {
    flex: 1;
  }

  .item-details h4 {
    margin: 0;
  }

  .remove-button {
    padding: 5px 10px;
    background-color: #f26522;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .remove-button:hover {
    background-color: #d54c14;
  }

    /* CSS for the cart icon */
    .cart-icon {
      position: fixed;
      top: 20px;
      right: 20px;
      font-size: 24px;
      cursor: pointer;
    }

    .close-button {
    cursor: pointer;
    font-size: 26px;
    color: orange;
    transition: color 0.3s;
  }

  .close-button:hover {
    color: blue;
  }


    .cart-footer {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
  }
  
  .checkout-button {
    display: inline-block;
    padding: 10px 20px;
    background-color: orange;
    color: white;
    font-weight: bold;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.3s;
  }
  
  .checkout-button:hover {
    background-color: #f26522;
  }
  
  .checkout-button:focus {
    outline: none;
    transform: scale(1.05);
  }

  </style>



