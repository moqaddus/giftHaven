

<!DOCTYPE html>
<html>
<head>
	<title>Dashboard</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<style>
		 *{
	padding: 0;
	margin: 0;
	box-sizing: border-box;
	font-family: arial, sans-serif;
}
.header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 15px 30px;
	background: #23242b;
	color: orange;


}
.u-name {
	font-size: 20px;
	padding-left: 17px;
}
.u-name b {
	color: #127b8e;
}
.header i {
	font-size: 30px;
	cursor: pointer;
	color: #fff;
}
.header i:hover {
	color: #127b8e;
}
.user-p {
	text-align: center;
	padding-left: 10px;
	padding-top: 25px;
}
.user-p img {
	width: 100px;
	border-radius: 50%;
}
.user-p h4 {
	color: #ccc;
	padding: 5px 0;

}
.side-bar {
	width: 250px;
	background: #262931;
	min-height: 100vh;
	transition: 500ms width;
}
.body {
	display: flex;
}
.section-1 {
	width: 100%;
	background-color: #f0f0f0;
	background-size: cover;
	background-position: center;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
}
.section-1 h1 {
	color: #fff;
	font-size: 60px;
}
.section-1 p {
	color: #127b8e;
	font-size: 20px;
	background: #fff;
	padding: 7px;
	border-radius: 5px;
}
.side-bar ul {
	margin-top: 20px;
	list-style: none;
}
.side-bar ul li {
	font-size: 16px;
	padding: 15px 0px;
	padding-left: 20px;
	transition: 500ms background;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.side-bar ul li:hover {
	background: #127b8e;
}
.side-bar ul li a {
	text-decoration: none;
	color: #eee;
	cursor: pointer;
	letter-spacing: 1px;
}

.side-bar ul li span {
	text-decoration: none;
	color: #eee;
	cursor: pointer;
	letter-spacing: 1px;
}

.side-bar ul li i {
	text-decoration: none;
	color: #eee;
	cursor: pointer;
	letter-spacing: 1px;
}

.side-bar ul li a i {
	display: inline-block;
	padding-right: 10px;
	font-size: 23px;
}
#navbtn {
	display: inline-block;
	margin-left: 70px;
	font-size: 20px;
	transition: 500ms color;
}
#checkbox {
	display: none;
}
#checkbox:checked ~ .body .side-bar {
	width: 60px;
}
#checkbox:checked ~ .body .side-bar .user-p{
	visibility: hidden;
}
#checkbox:checked ~ .body .side-bar a span{
	display: none;
}

.form-popup {
  display: none;
  position: fixed;
  top: 30%;
  left: 40%;
  border: 3px solid #f1f1f1;
  z-index: 9;
}

.form-container {
  max-width: 500px;
  padding: 10px;
  background-color: lightgray;
}

/* Full-width input fields */
.form-container input[type=text], .form-container select,.form-container select option{
  width: 100%;
  padding: 15px;
  margin: 5px 0 22px 0;
  border: none;
  background: #f1f1f1;
}

/* When the inputs get focus, do something */
.form-container input[type=text]:focus,.form-container select:focus,.form-container select option{
  background-color: #ddd;
  outline: none;
}

/* Set a style for the submit/login button */
.form-container .btn {
  background-color: #04AA6D;
  color: white;
  padding: 16px 20px;
  border: none;
  cursor: pointer;
  width: 100%;
  margin-bottom:10px;
  opacity: 0.8;
}

/* Add a red background color to the cancel button */
.form-container .cancel {
  background-color: red;
}

/* Add some hover effects to buttons */
.form-container .btn:hover, .open-button:hover {
  opacity: 1;
}


	</style>
</head>
<body>
	<input type="checkbox" id="checkbox">
	<header class="header">
		<h2 class="u-name">GIFT <b>HAVEN</b>
			<label for="checkbox">
				<i id="navbtn" class="fa fa-bars" aria-hidden="true"></i>
			</label>
		</h2>
		<i class="fa fa-user" aria-hidden="true"></i>
	</header>
	<div class="body">
		<nav class="side-bar">
			<div class="user-p">		
			</div>
			<ul>
				<li>
					<a href="/Admin/viewOrders">
						<i class="fa fa-table" aria-hidden="true"></i>
						<span>View Orders</span>
					</a>
				</li>
				<li>
					<a href="/Admin/addProduct">
						<i class="fa solid fa-plus" aria-hidden="true"></i>
						<span>Add a Product</span>
					</a>
				</li>
				<li>
					<i class="fa fa-remove" aria-hidden="true" onclick="openForm()"></i>
					<span onclick="openForm()">Remove Product</span>
					<br />
				</li>
				<li>
					<i class="fa fa-pencil-square-o" aria-hidden="true" onclick="openForm2()"></i>
					<span onclick="openForm2()">update Product</span>
					<br />
				</li>
				<li>
					<a href="/Admin/addAdmin">
						<i class="fa fa-user-plus" aria-hidden="true"></i>
						<span>Add an Admin</span>
					</a>
				</li>
				<li>
					<a href="~/Home/Index">
						<i class="fa fa-power-off" aria-hidden="true"></i>
						<span>Logout</span>
					</a>
				</li>
			</ul>
		</nav>
		<section class="section-1">

			<h1>@Model</h1>
		</section>
	</div>

	<div class="form-popup" id="myForm">
  <form action="/Admin/Signin" class="form-container" method="post">
    <h1>Enter product details</h1>

    <label for="name"><b>NAME:</b></label>
    <input type="text" id="name" placeholder="Enter Item Name" name="ItemName" required>

    <label for="category"><b>CATEGORY:</b></label>
     <select id="category" name="Category" >
        <option disabled selected value="">--select an option--</option>
        <option value="anniversary">Anniversay Gifts</option>
        <option value="birthday">Birthday Gifts</option>
        <option value="basket">Gift Baskets</option>

    </select>

    <button type="submit" class="btn">SUBMIT</button>
    <button type="button" class="btn cancel" onclick="closeForm()">CLOSE</button>
  </form>
</div>




<div class="form-popup" id="myForm2">
  <form action="/Admin/Signin2" class="form-container" method="post">
    <h1>Enter details</h1>

    <label for="name"><b>NAME:</b></label>
    <input type="text" id="name" placeholder="Enter Item Name" name="ItemName" required>

    <label for="category"><b>CATEGORY:</b></label>
     <select id="category" name="Category" >
        <option disabled selected value="">--select an option--</option>
        <option value="anniversary">Anniversay Gifts</option>
        <option value="birthday">Birthday Gifts</option>
        <option value="basket">Gift Baskets</option>

    </select>

    <button type="submit" class="btn">SUBMIT</button>
    <button type="button" class="btn cancel" onclick="closeForm2()">CLOSE</button>
  </form>
</div>


<script>
function openForm() {
  document.getElementById("myForm").style.display = "block";
}

function closeForm() {
  document.getElementById("myForm").style.display = "none";
}

function openForm2() {
  document.getElementById("myForm2").style.display = "block";
}

function closeForm2() {
  document.getElementById("myForm2").style.display = "none";
}


</script>
</body>

</html>